                        <dxg:GridColumn FieldName="Assist.PortConfig" IsSmart="True" />
                        <dxg:GridColumn FieldName="Assist" IsSmart="True" />
                        <dxg:GridColumn FieldName="Assist" IsSmart="True" />
                        <dxg:GridControl.View>
                            <dxg:TableView  AutoWidth="True" AllowEditing="False"/>

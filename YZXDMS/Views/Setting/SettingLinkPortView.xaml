                    <dxg:TreeListView KeyFieldName="ID" ParentFieldName="ParentId" AutoExpandAllNodes="True" ShowTotalSummary="True" ShowNodeImages="True" PrintNodeImages="True" AllowEditing="False" AutoWidth="True">
                        
                    </dxg:TreeListView>
                </dxg:TreeListControl.View>
            </dxg:TreeListControl>-->


            <dxlc:FlowLayoutControl ItemsSource="{Binding AssistDeviceOrderItems}" Orientation="Horizontal" >
                <dxlc:FlowLayoutControl.ItemTemplate>
                    <DataTemplate>
                        <dxlc:GroupBox Content="{Binding AssistDevice}" 
                                   Header="{Binding AssistDevice.Name}" >
                            <dxlc:GroupBox.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel DataContext="{Binding }">
                                        <Label Content="{Binding Name}" />
                                        <Label Content="{Binding AssistType}" />
                                    </StackPanel>
                                </DataTemplate>
                            </dxlc:GroupBox.ContentTemplate>
                        </dxlc:GroupBox>
                    </DataTemplate>
                </dxlc:FlowLayoutControl.ItemTemplate>
            </dxlc:FlowLayoutControl>

        </Grid>

        <StackPanel Grid.Column="1" Margin="10,0,0,0" >
            <Button Content="添加" Command="{Binding AddItemCommand}"/>
            <Button Content="删除"/>
        </StackPanel>
    </Grid>
</UserControl>
